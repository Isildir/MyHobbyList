@model List<MyHobbyList.Models.Ticket>

@{
    ViewBag.Title = "Tickets";
}

<h2>Tickets</h2>


<table id="dataTable" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" style="width:100%">
    <thead>
        <tr>
            <th>Ticekt title</th>
            <th>Date send</th>
            <th>Send by</th>
            <th>Ticket description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.TicketTitle</td>
            <td>@item.TimeSend.ToShortDateString()</td>
            <td>@item.UserName</td>
            <td>@item.TicketBody</td>
            <td>@Html.ActionLink("Remove ticket", "RemoveTicket", new { ticketId = item.Id })</td>
        </tr>
        }
    </tbody>
</table>
@section scripts
{
    <script>
$(document).ready(function () {
    $('#dataTable').DataTable();
        });</script>
}

