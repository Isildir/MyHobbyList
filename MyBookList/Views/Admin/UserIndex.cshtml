@model List<MyHobbyList.Models.UserData>

@{
    ViewBag.Title = "UserIndex";
}

<h2>UserIndex</h2>

<table id="dataTable" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" style="width:100%">
    <thead>
        <tr>
            <th>User Name</th>
            <th>User Account State</th>
            <th>User Account Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Email</td>
            <td>@item.AccountState</td>
            <td>@item.AccountType</td>
            <td>@(item.AccountState == MyHobbyList.Models.AccountState.Active ? Html.ActionLink("Block user","BanUser", new { userId = item.Id }) : Html.ActionLink("Unblock user", "UnbanUser", new { userId = item.Id }))</td>
        </tr>
        }
    </tbody>
</table>
@section scripts
{
    <script>$(document).ready(function () {
    $('#dataTable').DataTable();
        });</script>
}

