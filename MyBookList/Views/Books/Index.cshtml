@model IEnumerable<MyBookList.ViewModels.BookIndexViewModel>

    @{
        ViewBag.Title = "title";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2 style="width:100%;text-align:center;">Books List</h2>

<table id="dataTable" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" style="width:100%">
    <thead>
        <tr>
            <th></th>
            <th>Book Title</th>
            <th>Score</th>
            <th>Author</th>
            <th>Date Released</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td><img id="image" src='@Url.Action("ShowMini", "Image", new { id = item.ImageId})' height="100" width="70" /></td>
                <td>@Html.ActionLink(item.Title, "Details", "Books", new { id = item.Id }, null)</td>
                <td>@item.AverageScore</td>
                <td>@item.Author</td>
                <td>@item.ReleaseDate.ToString("MM/dd/yyyy")</td>
                <td>@item.BookGenre.Name</td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                "order": [],
                "columnDefs": [
                    { "targets": [0], "searchable": false, "orderable": false, "visible": true }
                ]
            });
        });
    </script>

    @if (TempData.ContainsKey("success"))
    {
        <script>toastr.success("@TempData.SingleOrDefault(x => x.Key == "success").Value")</script>
    }
    else if (TempData.ContainsKey("fail"))
    {
        <script>toastr.success("@TempData.SingleOrDefault(x => x.Key == "fail").Value")</script>
    }
}



