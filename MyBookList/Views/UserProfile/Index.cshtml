@section Scripts {

    @if (TempData.ContainsKey("success"))
        {
        <script>toastr.success("@TempData.SingleOrDefault(x => x.Key == "success").Value")</script>
    }
    else if (TempData.ContainsKey("fail"))
    {
        <script>toastr.error("@TempData.SingleOrDefault(x => x.Key == "fail").Value")</script>
    }

    <script>
        $(document).ready(function () {

            $('#BookEdit').on('shown.bs.modal', function () {
                $('#myInput').focus()
            })

            $('#MovieEdit').on('shown.bs.modal', function () {
                $('#myInput').focus()
            })

            $('#GameEdit').on('shown.bs.modal', function () {
                $('#myInput').focus()
            })

            $('#SeriesEdit').on('shown.bs.modal', function () {
                $('#myInput').focus()
            })

            $('#Ticket').on('shown.bs.modal', function () {
                $('#myInput').focus()
            })

            $("#SendTicket").click(function () {
                $("#Ticket").modal('show');
            });

            $("#ShowBookModal").click(function () {
                $("#BookEdit").modal('show');
            });

            $("#ShowMovieModal").click(function () {
                $("#MovieEdit").modal('show');
            });

            $("#ShowGameModal").click(function () {
                $("#GameEdit").modal('show');
            });

            $("#ShowSeriesModal").click(function () {
                $("#SeriesEdit").modal('show');
            });

            $("#BookEdit #MovieEdit #GameEdit #SeriesEdit #Ticket").on("submit", "#form-bookformmodal", function (e) {
                e.preventDefault();  // prevent standard form submission

                var form = $(this);
                $.ajax({
                    url: form.attr("action"),
                    method: form.attr("method"),  // post
                    data: form.serialize(),
                    success: function (partialResult) {
                        $("#formContent").html(partialResult);
                    }
                });
            });
        });
        
        function readURL(input,targetId) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#' + targetId + ' #image1').attr('src', e.target.result);
                    $('#' + targetId + ' #image2').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#imgInp1,#imgInp2,#imgInp3,#imgInp4").change(function () {
            var id = $(event.target).parent().attr("id");
            readURL(this,id);
        });

    </script>
}



