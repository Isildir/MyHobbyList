@model MyBookList.ViewModels.UserProfileViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if(Model.BooksList.Any())
{
    <h2>My Books</h2>
    <table style="width: 100%" class="table table-bordered table-hover">
        <thead>
        <tr>
            <th style="width: 50%">Book Title</th>
            <th>Click To Delete</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var book in Model.BooksList.ToList())
        {
            <tr>
                <th>@Html.ActionLink(book.Title, "Details", "Books", new {id = book.Id}, null)</th>
                <th>@Html.ActionLink("Delete From My List", "Delete", "UserProfile", new { id = book.Id, modelType = "Book" }, new { @class = "btn btn-primary" })</th>
            </tr>
        }
            
        </tbody>
    </table>
}

