<link rel="stylesheet" type="text/css" href="~/Content/styles/Modals.css" />

@if (Model.BooksList.Any())
{
    <h2 style="width:100%;text-align:center;">My Books</h2>
    <table style="width: 100%" class="table table-bordered table-hover">
        <thead>
        <tr>
            <th style="width:34%;text-align:center; font-size:18px;">Book Title</th>
            <th style="width:33%;text-align:center; font-size:18px;">Your Rating</th>
            <th style="text-align:center; font-size:18px;">Click To Delete</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var book in Model.BooksList.ToList())
        {
            <tr>
                @if (!book.Recommended)
                {
                    <th style="text-align:center; font-size:14px;">@Html.ActionLink(book.Title, "Details", "Books", new { id = book.Id }, null)</th>
                    <th style="text-align:center; font-size:14px;">@book.AverageScore</th>
                    <th style="text-align:center;padding: 0">@Html.ActionLink("Delete From My List", "Delete", "UserProfile", new { id = book.Id, modelType = "Book" }, new { @class = "btn btn-primary" })</th>
                }
                else { anyBookRec = true; }
            </tr>
        }
        </tbody>
    </table>

    if (anyBookRec)
    {
        <h2 style="width:100%;text-align:center;">Recommend for me</h2>
        <table style="width: 100%" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width:34%;text-align:center; font-size:18px;">Book Title</th>
                    <th style="width:33%;text-align:center; font-size:18px;">Recommended By</th>
                    <th colspan="2" style="text-align:center; font-size:18px;">Click To Add or Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model.BooksList.ToList())
                {
                    <tr>
                        @if (book.Recommended)
                        {
                            <th style="text-align:center; font-size:14px;">@Html.ActionLink(book.Title, "Details", "Books", new { id = book.Id }, null)</th>
                            <th style="text-align:center; font-size:14px;">@book.RecommenderName</th>
                            <th style="text-align:center;padding: 0">@Html.ActionLink("Accept", "AddBookToUserBase", "UserProfile", new { id = book.Id }, new { @class = "btn btn-primary" })</th>
                            <th style="text-align:center;padding: 0">@Html.ActionLink("Reject", "Delete", "UserProfile", new { id = book.Id, modelType = "Book" }, new { @class = "btn btn-primary" })</th>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }
}


