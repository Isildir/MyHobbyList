@model MyBookList.ViewModels.GameFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>title</h2>

@using (Html.BeginForm("Update", "Games", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.ReleaseDate)
        @Html.TextBoxFor(m => m.ReleaseDate, "{0}:d MMM yyyy", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.GameGenreId)
        @Html.DropDownListFor(m => m.GameGenreId, new SelectList(Model.GameGenre, "Id", "Name"), "Select Genre", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Studio)
        @Html.TextBoxFor(m => m.Studio, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Image", new { @class = "form-control" })
        <input type="file" name="UploadImage" class="input-files" />
    </div>

    @Html.HiddenFor(m => m.Id);
    <button type="submit" class="btn btn-primary">Add a Game</button>
}