@model MyBookList.ViewModels.SeriesFormViewModel

@using (Html.BeginForm("Update", "Series", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ReleaseDate)
        @Html.TextBoxFor(m => m.ReleaseDate, "{0}:d MMM yyyy", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NumberOfSeasons)
        @Html.TextBoxFor(m => m.NumberOfSeasons, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SeriesGenreId)
        @Html.DropDownListFor(m => m.SeriesGenreId, new SelectList(Model.SeriesGenres, "Id", "Name"), "Select Genre", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="imgInp4" class="label-for-input">Choose a file</label>
        <div id="seriesImages">
            <input type="file" name="UploadImage" class="input-files" id="imgInp4" />
            @if (Model.ImageId == 8 || Model.ImageId == 0)
            {
                <img id="image1" src="~/Content/Images/default.jpg" alt="your image" style="width: 210px;height:300px" />
            }
            else
            {
                <img id="image2" src='@Url.Action("ShowFull", "Image", new { id = Model.ImageId})' style="width: 210px;height:300px" />
            }
        </div>
    </div>

    @Html.HiddenFor(m => m.Id);
    <div style="text-align:right;">
        <button type="submit" id="accountprofileedit-submit" name="accountprofileedit-submit" value="Edit Account" class="button-for-modal" style="margin-left:5px;">Save</button>
        <button type="button" class="button-for-modal" data-dismiss="modal">Cancel</button>
    </div>
}